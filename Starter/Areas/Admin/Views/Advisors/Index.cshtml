@model IEnumerable<Business.DTOs.AdvisorDtos.AdvisorDTO>

@{
    ViewData["Title"] = "Danışmanlar";
}

<h2 class="mb-4">Danışman Listesi</h2>

<a class="btn btn-primary mb-3" asp-action="Create">Yeni Danışman Ekle</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Unvan</th>
            <th>Email</th>
            <th>Telefon</th>
            <th>Bölüm</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var advisor in Model)
        {
                <tr>
                    <td>@advisor.FirstName</td>
                    <td>@advisor.LastName</td>
                    <td>@advisor.Title</td>
                    <td>@advisor.Email</td>
                    <td>@advisor.Phone</td>
                    <td>@advisor.DepartmentName</td> <!-- DTO'da DepartmentName varsa -->
                    <td>
                        <a asp-action="Details" asp-route-id="@advisor.Id" class="btn btn-info btn-sm">Detay</a>
                        <a asp-action="Edit" asp-route-id="@advisor.Id" class="btn btn-warning btn-sm">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@advisor.Id" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                </tr>
        }
    </tbody>
</table>
