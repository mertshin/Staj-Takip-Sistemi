@model IEnumerable<Business.DTOs.UniversityDtos.UniversityDTO>

@{
    ViewData["Title"] = "Üniversiteler";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">
                    <i class="fas fa-university me-2"></i>
                    Üniversiteler
                </h2>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>
                    Yeni Üniversite Ekle
                </a>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card shadow">
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>
                                            <i class="fas fa-hashtag me-1"></i>
                                            ID
                                        </th>
                                        <th>
                                            <i class="fas fa-university me-1"></i>
                                            Üniversite Adı
                                        </th>
                                        <th>
                                            <i class="fas fa-map-marker-alt me-1"></i>
                                            Adres
                                        </th>
                                        <th>
                                            <i class="fas fa-phone me-1"></i>
                                            Telefon
                                        </th>
                                        <th>
                                            <i class="fas fa-envelope me-1"></i>
                                            E-posta
                                        </th>
                                        <th>
                                            <i class="fas fa-globe me-1"></i>
                                            Website
                                        </th>
                                        <th class="text-center">
                                            <i class="fas fa-cogs me-1"></i>
                                            İşlemler
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="fw-bold">@item.Id</td>
                                            <td>
                                                <strong>@item.Name</strong>
                                            </td>
                                            <td>
                                                <small class="text-muted">@item.Address</small>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.Phone))
                                                {
                                                    <a href="tel:@item.Phone" class="text-decoration-none">
                                                        @item.Phone
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.Email))
                                                {
                                                    <a href="mailto:@item.Email" class="text-decoration-none">
                                                        @item.Email
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.Website))
                                                {
                                                    <a href="@item.Website" target="_blank" class="text-decoration-none">
                                                        <i class="fas fa-external-link-alt me-1"></i>
                                                        Website
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.Id"
                                                       class="btn btn-sm btn-info"
                                                       title="Detayları Görüntüle">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.Id"
                                                       class="btn btn-sm btn-warning"
                                                       title="Düzenle">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.Id"
                                                       class="btn btn-sm btn-danger"
                                                       title="Sil">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-university fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">Henüz üniversite eklenmemiş</h4>
                            <p class="text-muted">İlk üniversiteyi eklemek için aşağıdaki butona tıklayın.</p>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i>
                                İlk Üniversiteyi Ekle
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 