@model Business.DTOs.UniversityDtos.UniversityCreateDTO

@{
    ViewData["Title"] = "Yeni Üniversite Ekle";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-plus me-2"></i>
                        Yeni Üniversite Ekle
                    </h4>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Create" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label asp-for="Name" class="form-label fw-bold">
                                    <i class="fas fa-university me-1"></i>
                                    Üniversite Adı *
                                </label>
                                <input asp-for="Name" class="form-control" placeholder="Örn: İstanbul Teknik Üniversitesi" required />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label asp-for="Address" class="form-label fw-bold">
                                    <i class="fas fa-map-marker-alt me-1"></i>
                                    Adres *
                                </label>
                                <textarea asp-for="Address" class="form-control" rows="3"
                                          placeholder="Üniversitenin tam adresi..." required></textarea>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Phone" class="form-label fw-bold">
                                    <i class="fas fa-phone me-1"></i>
                                    Telefon
                                </label>
                                <input asp-for="Phone" class="form-control" type="tel"
                                       placeholder="0212 XXX XX XX" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label fw-bold">
                                    <i class="fas fa-envelope me-1"></i>
                                    E-posta
                                </label>
                                <input asp-for="Email" class="form-control" type="email"
                                       placeholder="info@universite.edu.tr" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12 mb-4">
                                <label asp-for="Website" class="form-label fw-bold">
                                    <i class="fas fa-globe me-1"></i>
                                    Website
                                </label>
                                <input asp-for="Website" class="form-control" type="url"
                                       placeholder="https://www.universite.edu.tr" />
                                <span asp-validation-for="Website" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>
                                Geri Dön
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>
                                Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Bootstrap form validation
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
} 