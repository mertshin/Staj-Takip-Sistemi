@{
    ViewData["Title"] = "Debug - Authentication Info";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Authentication Debug Information</h2>
            
            <div class="card">
                <div class="card-header">
                    <h4>Authentication Status</h4>
                </div>
                <div class="card-body">
                    <p><strong>Is Authenticated:</strong> @ViewBag.IsAuthenticated</p>
                    <p><strong>User Name:</strong> @ViewBag.UserName</p>
                </div>
            </div>
            
            <div class="card mt-3">
                <div class="card-header">
                    <h4>User Claims</h4>
                </div>
                <div class="card-body">
                    @if (ViewBag.Claims != null && ((IEnumerable<dynamic>)ViewBag.Claims).Any())
                    {
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Claim Type</th>
                                    <th>Claim Value</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var claim in (IEnumerable<dynamic>)ViewBag.Claims)
                                {
                                    <tr>
                                        <td>@claim.Type</td>
                                        <td>@claim.Value</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>No claims found</p>
                    }
                </div>
            </div>
            
            <div class="mt-3">
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Ana Sayfaya Dön</a>
                @if (ViewBag.IsAuthenticated)
                {
                    <a href="/Admin/Home/Index" class="btn btn-warning">Admin Paneli'ni Dene</a>
                }
                else
                {
                    <a href="@Url.Action("Login", "Account")" class="btn btn-secondary">Giriş Yap</a>
                }
            </div>
        </div>
    </div>
</div> 