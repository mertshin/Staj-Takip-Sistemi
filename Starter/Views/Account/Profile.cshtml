@{
    ViewData["Title"] = "Profil";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4><i class="fas fa-user"></i> Kullanıcı Profili</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <strong>Ad Soyad:</strong>
                            <p>@User.Identity.Name</p>
                        </div>
                        <div class="col-md-6">
                            <strong>Email:</strong>
                            <p>@User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <strong>Rol:</strong>
                            <p>@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <a href="javascript:history.back()" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Geri Dön
                    </a>
                </div>
            </div>
        </div>
    </div>
</div> 